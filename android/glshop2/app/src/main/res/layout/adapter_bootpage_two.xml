<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bootpage_two_bg"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_adver_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@null"
        android:src="@mipmap/boot_two_txt"
        />

    <ImageView
        android:id="@+id/iv_adver_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_adver_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:src="@mipmap/boot_two_center"
        android:layout_above="@+id/iv_bottom_point"
        />

    <ImageView
        android:id="@+id/iv_bottom_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="70dp"
        android:src="@mipmap/bootpage_point_two"/>
</RelativeLayout>