<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_advert_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        />
    <ImageView
        android:id="@+id/iv_adver_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@mipmap/boot_one_txt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/iv_bottom_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:src="@mipmap/bootpage_point_three"/>
    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/iv_bottom_point"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/star_selector"
        />
</RelativeLayout>