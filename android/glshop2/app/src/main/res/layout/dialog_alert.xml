<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_alert_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/buy_item_padding" >

            <!-- 对话框Icon -->

            <TextView
                android:id="@+id/dialog_iv_tip"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|left"
                android:text="@string/common_alert_title"
                android:textSize="16sp" />

            <View style="@style/item_devider_line" />

            <!-- 对话框正文内容 -->

            <TextView
                android:id="@+id/dialog_tv_content"
                style="@style/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/common_alert_content"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <!-- 确认按钮 -->

            <Button
                android:id="@+id/dialog_btn_confirm"
                style="@style/button_orange"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="立即认证"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_splits"
                android:text="跳过"
                android:textColor="#FFFF6600" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>