<?xml version="1.0" encoding="utf-8"?>
<!-- 显示货物详细信息Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:glshop="http://schemas.android.com/apk/res/com.glshop.net"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <!-- 买卖类型 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_buy_type"
        style="@style/BuyTextItem.Single"
        glshop:itemContent="@string/publish_type_buy"
        glshop:itemTitle="信息类型"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_view" />

    <!-- 货物信息 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_type"
        style="@style/BuyTextItem.Top"
        glshop:itemContent="@string/product_type_sand"
        glshop:itemTitle="货物信息"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 货物分类 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_category"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="河砂"
        glshop:itemTitle="分类"
        glshop:showItemIcon="false" />

    <View
        android:id="@+id/ll_item_devider_categroy"
        style="@style/item_devider_line" />

    <!-- 货物规格 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_sepc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="粗砂(3.1–3.7)"
        glshop:itemTitle="规格"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 含泥量 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_sediment_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_sediment_percentage"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 泥块含量 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_sediment_block_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_sediment_block_percentage"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 含水率 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_water_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_water_percentage"
        glshop:showItemIcon="false" />

    <View
        android:id="@+id/item_devider_water"
        style="@style/item_devider_line" />

    <!-- 表观密度 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_appearance_density"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_density"
        glshop:itemTitle="@string/product_appearance_density"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 压碎值指标 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_crunch_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemInputType="numberDecimal"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_crunch_percentage"
        glshop:showItemIcon="false" />

    <View
        android:id="@+id/item_devider_crunch"
        style="@style/item_devider_line" />

    <!-- 针片状颗粒含量 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_needle_plate_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemInputType="numberDecimal"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_needle_plate_percentage"
        glshop:showItemIcon="false" />

    <View
        android:id="@+id/item_devider_needle_plate"
        style="@style/item_devider_line" />

    <!-- 堆积密度 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_stacking_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_density"
        glshop:itemTitle="@string/product_stacking_percentage"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 坚固性指标 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_sturdiness_perc"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="0"
        glshop:itemSecondTitle="@string/product_unit_percent"
        glshop:itemTitle="@string/product_sturdiness_percentage"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 货物颜色 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_color"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="灰色"
        glshop:itemTitle="@string/product_color"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 货物产地 -->

    <com.glshop.net.ui.basic.view.listitem.BuyTextItemView
        android:id="@+id/ll_item_product_area"
        style="@style/BuyTextItem.Middle"
        glshop:itemContent="晋江"
        glshop:itemTitle="@string/product_area"
        glshop:showItemIcon="false" />

    <View style="@style/item_devider_line" />

    <!-- 实物照片 -->

    <LinearLayout
        android:id="@+id/ll_product_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_middle"
        android:orientation="vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/business_sell_real_product_message" />
        </LinearLayout>

        <View style="@style/item_devider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_item_product_pic_1"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:background="@drawable/ic_default_pic"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_item_product_pic_2"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_default_pic"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_item_product_pic_3"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:background="@drawable/ic_default_pic"
                android:contentDescription="@null"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/ll_item_devider_product_photo"
        style="@style/item_devider_line" />
    <!-- 备注说明 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buy_item_height"
            android:gravity="center_vertical"
            android:text="货物备注" />

        <View style="@style/item_devider_line" />

        <TextView
            android:id="@+id/tv_product_remarks_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buy_item_height"
            android:gravity="center_vertical"
            android:text="货物备注说明"
            android:textColor="@color/blue" />
    </LinearLayout>

</LinearLayout>