<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_common_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@drawable/title_bar_bg" >

    <!-- Back -->

    <ImageButton
        android:id="@+id/iv_common_back"
        android:layout_width="@dimen/titlebar_back_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_bg"
        android:contentDescription="@null"
        android:src="@drawable/btn_back_normal" />
    <!-- title及下拉菜单 -->

    <LinearLayout
        android:id="@+id/ll_dropdown_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_dropdown_menu_bg"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" >

        <TextView
            android:id="@+id/tv_commmon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_title"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_title_text_size" />

        <ImageView
            android:id="@+id/iv_common_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dropdown_menu_down"
            android:contentDescription="@null"
            android:duplicateParentState="true" />
    </LinearLayout>

    <!-- 操作菜单 -->

    <Button
        android:id="@+id/btn_commmon_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_bg"
        android:drawableLeft="@drawable/ic_filter"
        android:drawablePadding="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/titlebar_menu_text_size"
        android:visibility="gone" />

</RelativeLayout>