<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/buy_item_padding"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/et_titleType"
                android:text="企业相关介绍" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_company_intro"
            style="@style/edittext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="top"
            android:maxLength="120"
            android:text="相关介绍详情"
            android:textColor="@color/blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_item_single"
            android:gravity="center"
            android:padding="6dp" >

            <ImageView
                android:id="@+id/iv_item_product_pic_1"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:background="@drawable/ic_upload_pic"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/iv_item_product_pic_2"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_upload_pic"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/iv_item_product_pic_3"
                android:layout_width="@dimen/image_thumbnail_width"
                android:layout_height="@dimen/image_thumbnail_heigh"
                android:background="@drawable/ic_upload_pic"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>