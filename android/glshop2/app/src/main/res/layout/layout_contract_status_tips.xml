<?xml version="1.0" encoding="utf-8"?>
<!-- 合同状态说明提示 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/buy_item_padding"
    android:background="@drawable/bg_contract_status_tips"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/buy_item_padding"
    android:paddingRight="@dimen/buy_item_padding" >

    <!-- 当前状态说明 -->

    <TextView
        android:id="@+id/tv_contract_status_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该合同已于XX年XX月XX日XX小时XX分XX秒被取消"
        android:textColor="@color/red" />

    <!-- 当前状态备注 -->

    <LinearLayout
        android:id="@+id/ll_contract_status_info_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_contract_status_remarks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="取消原因:"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_contract_status_remarks_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="对方主动取消"
            android:textColor="@color/blue" />
    </LinearLayout>

</LinearLayout>