<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:glshop="http://schemas.android.com/apk/res/com.glshop.net"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_help_logo" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:text="长江电商V1.0"
            android:textColor="#646464" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/buy_item_padding" >

        <com.glshop.net.ui.basic.view.ListItemView
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            glshop:itemBgType="top"
            glshop:itemTitle="@string/about_us" />

        <View style="@style/item_devider_line" />

        <com.glshop.net.ui.basic.view.ListItemView
            android:id="@+id/ll_platform_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            glshop:itemBgType="middle"
            glshop:itemTitle="@string/platform_intro" />

        <View style="@style/item_devider_line" />

        <com.glshop.net.ui.basic.view.ListItemView
            android:id="@+id/ll_platform_qa_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            glshop:itemBgType="middle"
            glshop:itemTitle="@string/platform_qa" />

        <View style="@style/item_devider_line" />

        <com.glshop.net.ui.basic.view.ListItemView
            android:id="@+id/ll_platform_custom_service_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            glshop:itemBgType="middle"
            glshop:itemTitle="@string/platform_custom_service_phone" />

        <View style="@style/item_devider_line" />

        <LinearLayout
            android:id="@+id/ll_app_upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_bottom"
            android:gravity="center_vertical"
            android:minHeight="@dimen/buy_item_height" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:duplicateParentState="true"
                android:text="@string/app_upgrade" />

            <ImageView
                android:id="@+id/iv_new_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_new_app_version"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/selector_btn_more"
                android:contentDescription="@null"
                android:duplicateParentState="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>