<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_common_title" />

    <include layout="@layout/layout_load_data_status" />

    <LinearLayout
        android:id="@+id/ll_contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/buy_item_padding" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="联系人信息" />

                    <Button
                        android:id="@+id/btn_edit_contact"
                        style="@style/button_small_orange"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/modify" />
                </RelativeLayout>

                <!-- 联系人姓名 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buy_item_height"
                    android:background="@drawable/bg_item_top"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/buy_item_padding"
                    android:paddingRight="@dimen/buy_item_padding" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_star_mark"
                        android:contentDescription="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_contact"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="联系人姓名" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/buy_item_padding" >

                        <TextView
                            android:id="@+id/tv_contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="某某某"
                            android:textColor="@color/blue" />

                        <EditText
                            android:id="@+id/et_contact_name"
                            style="@style/edittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_edit_height"
                            android:hint="@string/data_to_input"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/item_devider_line" />
                <!-- 联系人手机 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buy_item_height"
                    android:background="@drawable/bg_item_middle"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/buy_item_padding"
                    android:paddingRight="@dimen/buy_item_padding" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_star_mark"
                        android:contentDescription="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_contact"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="联系人手机" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/buy_item_padding" >

                        <TextView
                            android:id="@+id/tv_contact_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="18666668888"
                            android:textColor="@color/blue" />

                        <EditText
                            android:id="@+id/et_contact_phone"
                            style="@style/edittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_edit_height"
                            android:hint="@string/data_to_input"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/item_devider_line" />
                <!-- 联系人电话 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buy_item_height"
                    android:background="@drawable/bg_item_bottom"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/buy_item_padding"
                    android:paddingRight="@dimen/buy_item_padding" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_star_mark"
                        android:contentDescription="@null"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_contact"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="联系人电话" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/buy_item_padding" >

                        <TextView
                            android:id="@+id/tv_contact_landline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0755-88886666"
                            android:textColor="@color/blue" />

                        <EditText
                            android:id="@+id/et_contact_landline"
                            style="@style/edittext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_edit_height"
                            android:hint="@string/data_to_input"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>